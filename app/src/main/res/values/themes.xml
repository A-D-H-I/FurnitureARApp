<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- MaterialComponents theme (good for MaterialToolbar, TextInputLayout, MaterialButton, etc.) -->
    <style name="Theme.FurnitureApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary / Secondary -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>

        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorSecondaryVariant">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>

        <!-- âœ… FIX: use framework attribute -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>

        <!-- Surfaces -->
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>

        <!-- Error -->
        <item name="colorError">@color/md_theme_light_error</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Rounded components -->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Furniture.Round16</item>
    </style>

    <style name="ShapeAppearance.Furniture.Round16" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>
